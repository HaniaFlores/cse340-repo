<h1>
    <%= title %>
</h1>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%
  const user = locals.accountData || {};
  const firstName = user.account_firstname || "there";
  const type = (user.account_type || "")
%>

<h2>Welcome <%= firstName %></h2>

<p>
  <a href="/account/update/<%= user.account_id %>">Update Account Information</a>
</p>

<!-- Only show inventory management link for Employee/Admin -->
<% if (type === "Employee" || type === "Admin") { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv/">Go to Inventory Management</a></p>
<% } %>