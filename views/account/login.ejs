<h1>
    <%= title %>
</h1>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="form-display">
    <form id="loginForm" action="/account/login" method="post">
        <div>
            <label for="account_email">Email:</label>
            <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>">
        </div>
        <div>
            <label for="account_password">Password:</label>
            <input type="password" name="account_password" id="accountPassword" required 
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>

        <button type="submit">Login</button>
    </form>

    <span class="no-registered">Don't have an account? <a href="/account/register">Register</a></span>
    
</div>