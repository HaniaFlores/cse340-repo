<h1>
    <%= title %>
</h1>

<%- messages() %>

<div class="form-display">
    <form id="loginForm" action="/account/login" method="post">
        <div>
            <label for="account_email">Email:</label>
            <input type="email" name="accountEmail" id="account_email" required>
        </div>
        <div>
            <label for="account_password">Password:</label>
            <input type="password" name="accountPassword" id="account_password" required>
        </div>

        <button type="submit">Login</button>
    </form>

    <span class="no-registered">Don't have an account? <a href="/account/register">Register</a></span>
    
</div>